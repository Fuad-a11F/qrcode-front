{
  "manifest_version": 2,
  "name": "Lost Time",
  "version": "1.0",


  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "js": [ "popup.js" ]
    }
  ],
  "background": {
    "scripts": ["popup.js"]
  },

  "browser_action": {
    "default_title": "LostTime",
    "default_icon": "code.ico",
    "default_popup": "popup.html"
  }

}